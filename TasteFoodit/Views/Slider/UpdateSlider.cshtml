
@model TasteFoodit.Entities.Slider

@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Slider</li>
            <li class="breadcrumb-item active" aria-current="page">Slider İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.SliderId)
                            <label>Slider Adı</label>
                            @Html.TextBoxFor(x => x.SliderName, new { @class = "form-control" })
                            <br />
                            <label>Slider Başlığı</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                            <br />
                            <label>Slider Açıklaması</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Slider Görseli</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />

                        </div>
                        <button type="submit" class="btn btn-success">Sliderı Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


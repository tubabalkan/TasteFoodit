@model List<TasteFoodit.Entities.Slider>
@{
    ViewBag.Title = "SliderList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Admin Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Slider</li>
            <li class="breadcrumb-item active" aria-current="page">Slider İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">

            <div class="card">
                <div class="card">

                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>

                                    <th>Slider Id</th>
                                    <th>Slider Adı</th>
                                    <th>Başlığı</th>
                                    <th>Açıklaması</th>
                                    <th>Görseli</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    count++;
                                <tr>

                                    <td>@count</td>
                                    <td>@item.SliderName</td>
                                    <td>@item.Description</td>
                                    <td>@item.Title</td>
                                    <td><img src="@item.ImageUrl" style="height:50px;width:50px;" class="rounded mx-auto d-block" alt="@item.ImageUrl"></td>
                                    <td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <a href="/Slider/CreateSlider/" class="btn btn-primary">Yeni Slider Girişi</a>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
    </div>

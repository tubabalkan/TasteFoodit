@model TasteFoodit.Entities.Contact
@{
    ViewBag.Title = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mesaj Ekleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">İletişim</li>
            <li class="breadcrumb-item active" aria-current="page">Mesaj Bilgisi</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Ekleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>İsim Soyisim</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                            <br />
                            <label>Mail</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <br />
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                            <br />
                            <label>Mesaj</label>
                            @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
                            <br />
                            <label>Tarih</label>
                            @Html.TextBoxFor(x => x.SendDate, new { @class = "form-control" })
                            <br />

                        </div>
                        <a href="/Contact/ContactList/" class="btn btn-primary">Ana Sayfaya Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


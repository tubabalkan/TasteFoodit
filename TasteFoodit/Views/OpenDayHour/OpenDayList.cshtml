@model List<TasteFoodit.Entities.OpenDayHour>
@{
    ViewBag.Title = "OpenDayList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Çalışma Günleri Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Çalışma Saatleri</li>
            <li class="breadcrumb-item active" aria-current="page">Çalışma Saati İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card">

                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>

                                    <th>Çalışma Id</th>
                                    <th>Gün İsmi</th>
                                    <th>Tarih</th>

                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>

                                        <td>@count</td>
                                        <td>@item.DayName</td>
                                        <td>@item.OpenHourRange</td>

                                        <td><a href="/OpenDayHour/DeleteOpenDayHour/@item.OpenDayHourId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/OpenDayHour/UpdateOpenDayHour/@item.OpenDayHourId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <a href="/OpenDayHour/CreatOpenDayHour/" class="btn btn-primary">Yeni Bilgi Girişi</a>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
    </div>





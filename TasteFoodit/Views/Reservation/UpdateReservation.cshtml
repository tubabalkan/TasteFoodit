@model TasteFoodit.Entities.Reservation
@{
    ViewBag.Title = "UpdateReservation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ürün Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Adminler</li>
            <li class="breadcrumb-item active" aria-current="page">Admin İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ReservationId)
                            <label>İsim</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            <br />
                            <label>Mail Adresi</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <br />
                            <label>Telefon No</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            <br />
                            <label>Tarih</label>
                            @Html.TextBoxFor(x => x.ReservationDate, new { @class = "form-control" })
                            <br />
                            <label>Saat</label>
                            @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
                            <br />
                            <label>Kişi Sayısı</label>
                            @Html.TextBoxFor(x => x.GuestCount, new { @class = "form-control" })
                            <br />
                            <label>Durum</label>
                            @Html.TextBoxFor(x => x.ReservationStatus, new { @class = "form-control" })
                            <br />
                        </div>
                        <button type="submit" class="btn btn-success">Rezervasyon Bilgisini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


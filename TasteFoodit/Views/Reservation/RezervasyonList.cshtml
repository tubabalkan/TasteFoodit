@model List<TasteFoodit.Entities.Reservation>
@{
    ViewBag.Title = "RezervasyonList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervasyon Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Rezervasyonlar</li>
            <li class="breadcrumb-item active" aria-current="page">Rezervasyon İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>Id</th>
                                    <th>İsim</th>
                                    <th>Mail</th>                          
                                    <th>Rezervasyon Durumu</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                        
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    
                                    @if (item.ReservationStatus == true)
                                    {
                                        <td><a href="/Reservation/RezervationFalse/@item.ReservationId" class="btn btn-warning">İptal Et</a></td>
                                    }
                                    else
                                    {
                                        <td><a href="/Reservation/RezervationTrue/@item.ReservationId" class="btn btn-dark">Onayla</a></td>
                                    }

                                    <td><a href="/Reservation/DeleteReservation/@item.ReservationId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                      
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
    </div>
    </div>

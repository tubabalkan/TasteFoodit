@model List<TasteFoodit.Entities.Address>
@{
    ViewBag.Title = "AdresList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Adres Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Adres</li>
            <li class="breadcrumb-item active" aria-current="page">Adres İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card">

                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>

                                    <th>Adres Id</th>
                                    <th>Telefon No</th>
                                    <th>Mail</th>
                                    <th>Açıklama</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>

                                        <td>@count</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Adress/DeleteAdres/@item.AddressId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Adress/UpdateAdres/@item.AddressId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <a href="/Adress/CreateAdress/" class="btn btn-primary">Yeni Adres Girişi</a>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
    </div>



